{
    "name": "taghwo/phone-number-validator-formatter-for-nigerian-phone-numbers",
    "type": "library",
    "description": "This handles backend validations and formatting of Nigerian phone numbers",
    "keywords": [
        "taghwo",
        "phone-number-validator-formatter-for-nigerian-phone-numbers"
    ],
    "homepage": "https://github.com/taghwo/nigerian-phone-number-validator-formatter",
    "license": "MIT",
    "authors": [
        {
            "name": "Taghwo Millionaire O",
            "email": "taghwomills@gmail.com",
            "homepage": "https://ninetofive.com.ng",
            "role": "Owner"
        }
    ],
    "require": {
        "php" : "~7.2"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=8.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "files":["src/helpers.php"],
        "psr-4": {
            "Taghwo\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Taghwo\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
